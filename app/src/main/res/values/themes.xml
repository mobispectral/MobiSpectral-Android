<resources>
    <!-- Base application theme. -->
    <style name="Theme.MobiSpectral" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sfu_primary</item>
        <item name="colorPrimaryVariant">@color/sfu_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sfu_primary</item>
        <item name="colorSecondaryVariant">@color/sfu_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>
</resources>